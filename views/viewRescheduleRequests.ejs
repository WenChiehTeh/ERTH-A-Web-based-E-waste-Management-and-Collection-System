<%- include("partials/header.ejs"); %>
<link href="styles/viewRescheduleRequests.css" rel="stylesheet">

<body>
    <div class="collectionRequestsContainer container">
        <div class="row my-4">
          <div class="bar col-lg-3">
            <div class="barFlex">
                <a href="/viewCollectionRequests" class="barItem itemText">Upcoming Requests</a>
                <a href="/viewPendingRequests" class="barItem itemText">Pending Requests</a>
                <a href="/viewRescheduleRequests" class="barItem itemText current">Pending Reschedule Requests</a>
                <a href="/viewPastRequests" class="barItem itemText">Past Requests</a>
            </div>
          </div>
          <div class="list col-lg-9">
            <div id="list">
              <div class="listItem">
                <div class="collectionDesc" id="id">ID: 1</div>
                <div class="collectionDesc span2">Name: </div>
                <div class="collectionDesc span2">Date: </div>
                <div class="collectionDesc span2">Phone no.:</div>
                <div class="collectionDesc span2">Address: </div>
                <button class="viewItemBtn">View Items</button>
              </div>
            </div>
            <div class="row my-4 slider" id="pagination">
              <button class="sliderBtns" id="back">Back</button>
              <button class="sliderBtns" id="next">Next</button>
            </div>
          </div>
        </div>
    </div>
    <div id="modal" class="modal">
      <div class="modal-content">
          <h2 class="modal-header">Items</h2>
          <table id="item-table">
              <thead>
                  <tr>
                      <th>Item</th>
                      <th>Quantity</th>
                  </tr>
              </thead>
              <tbody id="item-list"></tbody>
          </table>
          <button id="close-modal" class="close-btn">Close</button>
        </div>
    </div>
    <div id="reschedule-modal" class="modal">
      <div class="modal-content">
        <h2 class="modal-header">Reschedule Request</h2>
        <label for="reschedule-date">Select new date:</label>
        <input type="date" id="reschedule-date" class="form-control my-2">
    
        <input type="hidden" id="reschedule-request-id">
        
        <div class="modal-footer">
          <button id="confirm-reschedule" class="close-btn">Confirm</button>
          <button id="cancel-reschedule" class="close-btn">Cancel</button>
        </div>
      </div>
    </div>
    <script src="scripts/viewRescheduleRequests.js"></script>
</body>

<%- include("partials/footer.ejs"); %>