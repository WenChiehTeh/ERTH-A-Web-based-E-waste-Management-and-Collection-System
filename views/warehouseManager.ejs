<%- include("partials/sidebarWarehouseManager.ejs"); %>
<link href="styles/warehouseManager.css" rel="stylesheet">

<div class="formFlex">
    <div class="formContainer">
      <div class="title">Warehouse Stock</div>
      <table id="accountsTable">
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <button class="processBtn" onclick="showModal()">Process E-waste</button>
    </div>
</div>

<div id="modal" class="modal hidden">
    <div class="modal-content">
      <h2>Process E-waste</h2>

      <div>
        <label for="process" class="label">Process:</label><br>
        <select name="process" id="process" required>
          <option value="">--SELECT--</option>
          <option value="Recycle">Recycle</option>
          <option value="Refurbish">Refurbish</option>
        </select>
      </div>

      <div>
        <label for="date" class="label">Collection date :</label><br>
        <input class="textInput" type="date" id="date" name="date">
      </div>

      <div id="addItem">
        <div class="item">
          <label for="item" class="label">Items:</label><br>
          <select id="item1" onchange="updateDropdowns()" name="item" required>
              <option value="">--SELECT--</option>
          </select>
          <input type="number" min="1" class="qty" name="quantity" value="1" required>
        </div>
      </div>

      <div class="modal-buttons">
        <button id="addItemBtn">Add Items</button>
        <button id="cancelBtn">Cancel</button>
        <button id="confirmBtn">Confirm</button>
      </div>
    </div>
</div>

<div id="messageModalSuccess" class="modal hidden">
  <div class="modal-content">
    <div class="circle">
      <svg class="tick" width="200" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 12L10 18L20 6" stroke="white" stroke-width="4" stroke-linecap="square" stroke-linejoin="miter"/>
      </svg>
    </div>
    <p id="messageBody"></p>
    <div class="btnDiv">
      <button id="closeMessageBtn" class="btn">Close</button>
    </div>
  </div>
</div>

<div id="messageModalFail" class="modal hidden">
  <div class="modal-content">
    <div class="circleF">
      <svg class="cross" width="200" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 6L18 18M6 18L18 6" stroke="white" stroke-width="4" stroke-linecap="square" stroke-linejoin="miter"/>
      </svg>
    </div>
    <p id="messageBodyFail">TEST</p>
    <div class="btnDiv">
      <button id="closeMessageBtnFail" class="btn">Close</button>
    </div>
  </div>
</div>

<script src="scripts/warehouseManager.js"></script>