<%- include("../partials/header(login).ejs"); %>
<link href="styles/requestFailed.css" rel="stylesheet">

    <body>
        <div class="loginContainer">
            <div class="circle">
                <svg class="cross" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 6L18 18M6 18L18 6" stroke="white" stroke-width="4" stroke-linecap="square" stroke-linejoin="miter"/>
                </svg>
            </div>
            <div class="errorMessage" >
                <% if (locals.message == "address") { %>
                    <p>Invalid address, please try again or try another address.</p>
                <% } else { %>
                    <p>Payment failed, collection request has not been made, please try again.</p>
                <% } %>
            </div>
            <div class="errorBtn">
                <a href="/" class="button-link">
                    <button class="button">Back to homepage</button>
                </a>
            </div>
        </div>
        <script src="/scripts/login.js"></script>
    </body>

<%- include("../partials/footer.ejs"); %>